    <div id="codeContainer" class="hidden">
      <p>كود المكافأة:</p>
      <div class="code-box">KONAMI-5000-XTRA-9X7D</div>
      <div class="countdown" id="countdown"></div>
    </div>
    <button class="button" onclick="goBack()">🔙 رجوع</button>
  </div>

  <script>
    function showLogin() {
      document.getElementById('mainContent').classList.add('hidden');
      document.getElementById('loginForm').classList.remove('hidden');
    }

    function submitLogin() {
      const email = document.getElementById('email').value.trim();
      const password = document.getElementById('password').value.trim();
      if (!email || !password) {
        alert('يرجى إدخال البيانات كاملة.');
        return;
      }
      if (email !== 'shenoudaatf7@gmail.com') {
        alert('❌ هذا بريد إلكتروني غير صحيح، يرجى إدخال البريد المرتبط بحسابك في ™eFootball.');
        return;
      }
      document.getElementById('loginForm').classList.add('hidden');
      document.getElementById('confirmation').classList.remove('hidden');
      setTimeout(() => {
        document.getElementById('codeContainer').classList.remove('hidden');
        startCountdown();
      }, 1500);
    }

    function startCountdown() {
      const countdownEl = document.getElementById('countdown');
      let seconds = 24 * 60 * 60;
      const interval = setInterval(() => {
        const hrs = Math.floor(seconds / 3600);
        const mins = Math.floor((seconds % 3600) / 60);
        const secs = seconds % 60;
        countdownEl.textContent = `الوقت المتبقي: ${hrs} س ${mins} د ${secs} ث`;
        seconds--;
        if (seconds < 0) clearInterval(interval);
      }, 1000);
    }

    function goBack() {
      document.getElementById('mainContent').classList.remove('hidden');
      document.getElementById('loginForm').classList.add('hidden');
      document.getElementById('confirmation').classList.add('hidden');
    }
  </script>
